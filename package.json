        "openzeppelin-solidity": "2.2.0",
        "peer-info": "robertkiel/js-peer-info",
        "prompt": "1.0.0",
        "pull-length-prefixed": "robertkiel/pull-length-prefixed",
        "pull-paramap": "1.2.2",
        "read": "1.0.7",
        "rlp": "2.2.3",
