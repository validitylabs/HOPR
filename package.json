{
    "name": "messaging-protocol",
    "author": {
        "name": "Validity Labs AG",
        "email": "info@validitylabs.org",
        "url": "https://validitylabs.org"
    },
    "version": "0.0.1",
    "description": "Privacy preserving messaging protocol with incentivations for relay operators",
    "repository": {
        "type": "git",
        "url": "https://github.com/validitylabs/messagingProtocol.git"
    },
    "scripts": {
        "dev": "npx truffle develop",
        "lint": "npx solhint --formatter table contracts/**/*.sol",
        "compile": "npx cross-env NODE_ENV=develop cross-env TASK=compile node ./tools/server/index",
        "migrate": "npx cross-env NODE_ENV=develop cross-env TASK=migrate node ./tools/server/index",
        "test": "yarn lint && npx cross-env NODE_ENV=develop cross-env TASK=test node ./tools/server/index",
        "coverage": "npx cross-env NODE_ENV=develop cross-env TASK=coverage node ./tools/server/index",
        "demo": "node test/demo.js",
        "hopr": "node hopr.js",
        "testnet": "node test/testnet.js",
        "clean": "npx shx rm -fr docs db dist build bin coverage",
        "reset": "npx yarn run clean && npx shx rm -fr node_modules",
        "update": "yarn run reset && yarn upgrade"
    },
    "dependencies": {
        "@nodeutils/defaults-deep": "1.1.0",
        "babel-cli": "6.26.0",
        "babel-eslint": "10.0.1",
        "babel-polyfill": "6.26.0",
        "babel-preset-env": "1.7.0",
        "babel-register": "6.26.0",
        "blake2": "2.0.1",
        "chacha": "2.1.0",
        "chai": "4.1.2",
        "chai-as-promised": "7.1.1",
        "chai-bignumber": "3.0.0",
        "chalk": "2.4.2",
        "class-is": "1.1.0",
        "eslint": "5.15.3",
        "dotenv": "7.0.0",
        "futoin-hkdf": "1.0.3",
        "ganache-core": "2.5.3",
        "getopts": "2.2.4",
        "leveldown": "4.0.2",
        "levelup": "4.0.0",
        "libp2p": "robertkiel/js-libp2p",
        "libp2p-crypto": "0.16.1",
        "libp2p-crypto-secp256k1": "0.3.0",
        "libp2p-kad-dht": "0.14.10",
        "libp2p-mplex": "0.8.5",
        "libp2p-secio": "0.11.1",
        "libp2p-switch": "*",
        "libp2p-tcp": "0.13.0",
